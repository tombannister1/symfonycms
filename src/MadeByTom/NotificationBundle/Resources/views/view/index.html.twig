{% extends '@MadeByTomCore/layout.html.twig' %}

{% block page_header_title %}
    Viewing Message
{% endblock %}

{% block content_area %}
    <div class="panel panel-default">
        <div class="panel-heading">{{ message.sender.firstName }} {{ message.sender.firstName }} - {{ message.createdAt|ago }}</div>
        <div class="panel-body">{{ message.messageContent }}</div>
    </div>
    <form method="post" id="notifcation-create">
        <div class="form-group">
            <textarea class="editor"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary pull-right" type="submit">Send</button>
        </div>
    </form>
{% endblock %}